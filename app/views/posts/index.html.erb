<%= form_with scope: :post, url: posts_path, method: :post, class: "mb-5", multipart: true do |form| %>
  <div class="form-group">
    <%= form.text_area :message, class: "form-control", placeholder: "O que você está pensando?" %>
  </div>
  <div class="form-group" style="margin-top: -20px">
    <%= form.file_field :media, class: "form-control" %>
  </div>

  <%= form.submit "Postar", class: "btn btn-primary" %>
<% end %>

<!-- render posts -->
<div data-controller="infinite-scroll" data-action="scroll@window->infinite-scroll#scroll">
  <div data-infinite-scroll-target="entries">
    <%= render "posts" %>
  </div>

  <div data-infinite-scroll-target="pagination" class="d-none">
    <%== pagy_nav @pagy %>
  </div>
</div>
