<% @posts.each do |post| %>
  <div class="card mb-4">
    <div class="card-body">
      <h6 class="card-subtitle mb-2 text-muted"><%= post.user.nickname %></h6>
      <p class="card-text"><%= post.message %></p>
      <small class="text-muted"><%= post.created_at %></small>
    </div>
  </div>
<% end %>