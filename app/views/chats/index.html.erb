<div class="card">

  <%= form_with scope: :chat, url: chats_path, method: :post do |form| %>
    <div class="form-group">
      <%= form.collection_select :user_ids, User.all, :id, :name, {}, {class: 'form-control'} %>
    </div>

    <div class="d-flex justify-content-end">
      <%= form.submit "Novo chat", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="row">
    <div class="col">
      <%= render "chats" %>
    </div>
  </div>

</div>