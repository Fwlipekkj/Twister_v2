<% flash.each do |key, value| %>

<div class="alert alert-<%= bootstrap_alert_class(key) %> alert-dismissible fade show" role="alert">
  <strong><%= bootstrap_alert_title(key) %></strong> <%= value %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>


<% end %>
