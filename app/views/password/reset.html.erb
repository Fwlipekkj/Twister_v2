<div class="card">
  <div class="card-header">
    <h4 class="card-title"><strong>Redefinir senha</strong></h4>
  </div>

  <%= form_with model: @user, url: reset_password_path, method: :post, html: {class: ""} do |form| %>
    <div class="card-body">
      <div class="form-group">
        <%= form.hidden_field :email, class: "form-control #{bootstrap_form_error_class(form, :email)}", placeholder: "E-mail"  %>
      </div>
      <div class="form-group">
        <%= form.password_field :password, class: "form-control #{bootstrap_form_error_class(form, :password)}", placeholder: "Nova senha" %>
      </div>
    </div>
    <div class="card-footer">
      <div class="d-flex justify-content-end">
        <%= form.submit "Atualizar", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

