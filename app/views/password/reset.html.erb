<!-- Modal -->
<div class="modal fade" id="register_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Resetar Senha</h5>
        <!--        <button type="button" class="close" data-dismiss="modal" aria-label="Close">-->
        <!--          <span aria-hidden="true">&times;</span>-->
        <!--        </button>-->
      </div>
      <% if @user  %>
        <%= form_with model: @user, url: reset_password_path, method: :post, html: {class: ""} do |form| %>
          <div class="modal-body">
            <div class="form-group">
              <%= form.hidden_field :email, class: "form-control #{bootstrap_form_error_class(form, :email)}", placeholder: "E-mail"  %>
            </div>
            <div class="form-group">
              <%= form.password_field :password, class: "form-control #{bootstrap_form_error_class(form, :password)}", placeholder: "Senha" %>
            </div>
            <div class="form-group">
              <%= form.password_field :password_confirmation, class: "form-control #{bootstrap_form_error_class(form, :password_confirmation)}", placeholder: "Confirmar Senha" %>
            </div>
          </div>
          <div class="modal-footer">
            <%= form.submit "Resetar Senha", class: "btn btn-primary" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<script type="application/javascript">
    $(document).ready(function(){
        $("#register_modal").modal("toggle")
    })
</script>